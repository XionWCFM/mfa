{
  "extends": "@modern-js/tsconfig/base",
  "compilerOptions": {
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./shared/*"],
      "*": ["./@mf-types/*"]
    }
  },
  "include": ["src", "shared", "config", "modern.config.ts", "./@mf-types/*"],
  "exclude": ["**/node_modules"]
}
